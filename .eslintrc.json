{
  // As of 3.9.0
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 7,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "browser": true,
    "commonjs": true,
    "node": true,
    "es6": true,
    "mocha": true
  },
  "globals": {},
  "rules": {
    // --- enable additional rules ---
    // Possible Errors
    "no-extra-parens": "error",
    "no-prototype-builtins": "warn",
    "no-template-curly-in-string": "error",
    "no-unsafe-negation": "error",
    "valid-jsdoc": "warn",
    // Best Practices
    "accessor-pairs": "error",
    "array-callback-return": "error",
    "block-scoped-var": "error",
    "complexity": ["warn", 8],
    "consistent-return": "warn",
    "curly": "error",
    "default-case": ["error", { "commentPattern": "^skip\\sdefault" }],
    "dot-location": ["error", "property"],
    "dot-notation": ["error"],
    "eqeqeq": ["error", "smart"],
    "guard-for-in": "error",
    "no-alert": "error",
    "no-caller": "error",
    "no-else-return": "error",
    "no-empty-function": "error",
    "no-eval": "error",
    "no-extra-bind": "error",
    "no-extra-label": "error",
    "no-floating-decimal": "error",
    "no-global-assign": "error",
    "no-implicit-coercion": "error",
    "no-implicit-globals": "error",
    "no-implied-eval": "error",
    "no-invalid-this": "error",
    "no-iterator": "error",
    "no-lone-blocks": "error",
    "no-loop-func": "error",
    "no-multi-spaces": "error",
    "no-multi-str": "error",
    "no-new-func": "error",
    "no-new-wrappers": "error",
    "no-new": "error",
    "no-param-reassign": "warn",
    "no-proto": "error",
    "no-return-assign": "error",
    "no-self-compare": "error",
    "no-sequences": "error",
    "no-throw-literal": "error",
    "no-unmodified-loop-condition": "warn",
    "no-unused-expressions": "error",
    "no-useless-call": "error",
    "no-useless-concat": "error",
    "no-useless-escape": "error",
    "no-useless-return": "error",
    "no-void": "error",
    "no-with": "warn",
    "radix": "error",
    "vars-on-top": "error",
    "wrap-iife": "error",
    "yoda": "error",
    // Variables
    "init-declarations": ["warn", "always"],
    "no-delete-var": "error",
    "no-shadow-restricted-names": "error",
    "no-shadow": "error",
    "no-undefined": "error",
    "no-use-before-define": "error",
    // Node.js and CommonJS
    "callback-return": "error",
    "handle-callback-err": "error",
    // Stylistic Issues
    "array-bracket-spacing": ["error", "always", { "objectsInArrays": false, "arraysInArrays": false }],
    "block-spacing": "error",
    "brace-style": ["error", "stroustrup", { "allowSingleLine": true }],
    "comma-dangle": "error",
    "comma-spacing": ["error", { "before": false, "after": true }],
    "comma-style": ["error", "last"],
    "computed-property-spacing": ["error", "always"],
    "consistent-this": ["error", "self"],
    "eol-last": "error",
    "func-call-spacing": "error",
    "func-name-matching": "error",
    "indent": ["error", "tab", { "SwitchCase": 1 }],
    "jsx-quotes": ["error", "prefer-double"],
    "key-spacing": ["error", { "beforeColon": false, "afterColon": true, "mode": "strict" }],
    "keyword-spacing": ["error", { "before": true, "after": true }],
    "linebreak-style": ["error", "unix"],
    "lines-around-comment": ["error", { "beforeLineComment": true, "beforeBlockComment": true, "allowBlockStart": true, "allowObjectStart": true, "allowArrayStart": true }],
    "max-depth": ["error", 5],
    "max-len": ["error", 120],
    "max-nested-callbacks": ["error", 5],
    "max-params": ["error", 5],
    "max-statements-per-line": ["error", { "max": 2 }],
    "new-cap": "error",
    "new-parens": "error",
    "newline-after-var": ["error", "always"],
    "newline-before-return": "error",
    "newline-per-chained-call": ["error", {"ignoreChainWithDepth": 3}],
    "no-array-constructor": "error",
    "no-lonely-if": "error",
    "no-mixed-operators": "warn",
    "no-multiple-empty-lines": ["error", {"max": 2}],
    "no-negated-condition": "error",
    "no-new-object": "error",
    "no-trailing-spaces": "error",
    "no-unneeded-ternary": "error",
    "no-whitespace-before-property": "error",
    "object-curly-newline": ["error", { "multiline": true }],
    "object-curly-spacing": ["error", "always"],
    "object-property-newline": ["error", { "allowMultiplePropertiesPerLine": true }],
    "one-var-declaration-per-line": ["error", "initializations"],
    "one-var": ["warn", "always"],
    "operator-linebreak": ["error", "before"],
    "padded-blocks": ["error", "never"],
    "quote-props": ["error", "consistent-as-needed", { "keywords": true }],
    "quotes": ["error", "double", {"allowTemplateLiterals": true, "avoidEscape": true}],
    "require-jsdoc": "error",
    "semi-spacing": "error",
    "semi": ["error", "always"],
    "space-before-blocks": "error",
    "space-before-function-paren": ["error", {"anonymous": "always", "named": "always", "asyncArrow": "always"}],
    "space-in-parens": ["error", "always"],
    "space-infix-ops": "error",
    "space-unary-ops": "error",
    "spaced-comment": ["error", "always"],
    // ECMAScript 6
    "arrow-body-style": ["error", "as-needed"],
    "arrow-parens": ["error", "as-needed"],
    "arrow-spacing": "error",
    "generator-star-spacing": ["error", "before"],
    "no-confusing-arrow": "warn",
    "no-duplicate-imports": "error",
    "no-useless-rename": "error",
    "no-useless-computed-key": "error",
    "no-useless-constructor": "error",
    "prefer-arrow-callback": "error",
    "prefer-const": "warn",
    "prefer-rest-params": "warn",
    "prefer-spread": "warn",
    "prefer-template": "warn",
    "template-curly-spacing": ["error", "always"],
    "yield-star-spacing": ["error", "before"],

    // --- override default options for rules from base configurations ---
    "no-undef": "warn",
    "no-unused-vars": ["error", { "varsIgnorePattern": "^regenerator.*$" }],
    "no-fallthrough": ["error", { "commentPattern": "break[\\s\\w]*omitted" }],
    "no-mixed-spaces-and-tabs": ["error", "smart-tabs"]

    // --- disable rules from base configurations ---
  }
}